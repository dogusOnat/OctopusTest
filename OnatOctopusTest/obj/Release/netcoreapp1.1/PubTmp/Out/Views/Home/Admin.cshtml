@model  OnatOctopusTest.ViewModels.AdminVm
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Fetch Webpage </h2>

@using (Html.BeginForm("Admin", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-horizontal  col-xs-4">
        <h4></h4>
        <hr /> 
        <div class="form-horizontal col-xs-6 pull-right">
            <div class="form-group">
                <div>
                    @{
                        if (Model.Words != null && Model.Words.Count > 0)
                        {
                            <table>
                                <thead>
                                    <tr>
                                        <td>Word</td>
                                        <td>Frequency</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Words)
                                    {
                                        <tr>
                                            <td>@item.Text</td>
                                            <td>@item.Frequency</td>


                                        </tr>
                                    }
                                </tbody>
                            </table>
                       
                        }
                    }
                </div>
            </div>
        </div>
       
    </div>
                        }

