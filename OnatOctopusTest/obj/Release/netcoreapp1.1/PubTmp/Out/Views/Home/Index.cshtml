@model  OnatOctopusTest.ViewModels.IndexVm
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Fetch Webpage </h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{ 
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-horizontal  col-xs-4">
        <h4></h4>
        <hr />
        <div class="form-group">
            <label class="control-label pull-left"> Webpage Url: </label>
            @Html.TextBoxFor(p => p.WebPageUrl, new { id = "webPageUrl", @class = "form-control", autocomplete = "off" })
        </div>

        <div class="form-horizontal col-xs-6 pull-right">
            <div class="form-group">
                <div>
                    @{
                        if (Model.Words != null && Model.Words.Count > 0)
                        { 
                            @foreach (var item in Model.Words)
                            {
                                <span title="@(item.Frequency)"> <strong class=@OnatOctopusTest.Extensions.Worker.GetTagClass(item.Frequency, Model.WordFrequencySum)> @item.Text </strong></span>

                            } 
                        }
                    }
                </div>
            </div>
        </div>
        <div class="form-horizontal col-xs-10 pull-left">
            <div class="form-group">
                <button type="submit" id="btnFetchWords" name="command" class="btn btn-primary" >Fetch Words</button> 
            </div>
        </div>
    </div>
                        }

 